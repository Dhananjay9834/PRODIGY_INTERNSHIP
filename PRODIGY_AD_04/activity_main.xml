<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player X's Turn"
        android:textSize="18sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Game Board -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="5"
            android:padding="12dp">

            <!-- Row 1 -->
            <Button android:id="@+id/btn0" android:contentDescription="1" style="@style/GameCell"/>
            <View android:layout_width="1dp" android:layout_height="90dp"
                android:background="@drawable/line"/>
            <Button android:id="@+id/btn1" android:contentDescription="2" style="@style/GameCell"/>
            <View android:layout_width="1dp" android:layout_height="90dp"
                android:background="@drawable/line"/>
            <Button android:id="@+id/btn2" android:contentDescription="3" style="@style/GameCell"/>

            <!-- Horizontal Line -->
            <View android:layout_width="270dp" android:layout_height="1dp"
                android:layout_columnSpan="5"
                android:background="@drawable/line"/>

            <!-- Row 2 -->
            <Button android:id="@+id/btn3" android:contentDescription="4" style="@style/GameCell"/>
            <View android:layout_width="1dp" android:layout_height="90dp"
                android:background="@drawable/line"/>
            <Button android:id="@+id/btn4" android:contentDescription="5" style="@style/GameCell"/>
            <View android:layout_width="1dp" android:layout_height="90dp"
                android:background="@drawable/line"/>
            <Button android:id="@+id/btn5" android:contentDescription="6" style="@style/GameCell"/>

            <!-- Horizontal Line -->
            <View android:layout_width="270dp" android:layout_height="1dp"
                android:layout_columnSpan="5"
                android:background="@drawable/line"/>

            <!-- Row 3 -->
            <Button android:id="@+id/btn6" android:contentDescription="7" style="@style/GameCell"/>
            <View android:layout_width="1dp" android:layout_height="90dp"
                android:background="@drawable/line"/>
            <Button android:id="@+id/btn7" android:contentDescription="8" style="@style/GameCell"/>
            <View android:layout_width="1dp" android:contentDescription="9" android:layout_height="90dp"
                android:background="@drawable/line"/>
            <Button android:id="@+id/btn8" android:contentDescription="9" style="@style/GameCell"/>

        </GridLayout>

    </androidx.cardview.widget.CardView>

    <!-- Reset Button -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:contentDescription="reset button"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F51B5"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/cardBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
